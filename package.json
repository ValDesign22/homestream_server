{
  "name": "homestream_server",
  "engines": {
    "node": ">=18"
  },
  "version": "1.1.7",
  "description": "HomeStream server for streaming media",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "start:dev": "ts-node src/index.ts",
    "start:prod": "pm2 start dist/index.js --name HomeStream",
    "stop:prod": "pm2 stop HomeStream",
    "restart:prod": "pm2 restart HomeStream",
    "lint": "prettier . --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "author": "ValDesign",
  "repository": {
    "type": "git",
    "url": "git+github.com:ValDesign22/homestream_server.git"
  },
  "license": "MIT",
  "dependencies": {
    "@nuxum/core": "^1.0.4",
    "axios": "^1.7.9",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.7",
    "fastest-levenshtein": "^1.0.16",
    "fluent-ffmpeg": "^2.1.3",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/fluent-ffmpeg": "2.1.27",
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.13",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "prettier": "3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
